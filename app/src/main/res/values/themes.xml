<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CURRENCYAPP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customise your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_900</item>
        <item name="colorPrimaryVariant">@color/cyan_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- Radio buttons -->
        <item name="radioButtonStyle">@style/Widget.CurrencyApp.CompoundButton.RadioButton</item>
        <!-- Switches -->
        <item name="switchStyle">@style/Widget.CurrencyApp.CompoundButton.Switch</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

</resources>